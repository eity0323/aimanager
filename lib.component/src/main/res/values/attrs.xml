<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--coverflow-->
    <attr name="gravity">
        <flag name="top" value="0x30"/>
        <flag name="bottom" value="0x50"/>
        <flag name="left" value="0x03"/>
        <flag name="right" value="0x05"/>
        <flag name="center_vertical" value="0x10"/>
        <flag name="fill_vertical" value="0x70"/>
        <flag name="center_horizontal" value="0x01"/>
        <flag name="fill_horizontal" value="0x07"/>
        <flag name="center" value="0x11"/>
        <flag name="fill" value="0x77"/>
        <flag name="clip_vertical" value="0x80"/>
        <flag name="clip_horizontal" value="0x08"/>
    </attr>

    <attr name="galleryStyle" format="reference"/>
    <declare-styleable name="CPTwoWayGallery">
        <attr name="flingAllow" format="boolean"/>
        <attr name="autoCycle" format="boolean"/>
        <attr name="gravity"/>
        <attr name="animationDuration" format="integer" min="0"/>
        <attr name="spacing" format="dimension"/>
        <attr name="unselectedAlpha" format="float"/>
        <attr name="orientation">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="CPCoverFlow">
        <attr name="coverage" format="float"/>
        <attr name="unselectedScale" format="float"/>
    </declare-styleable>


    <!--circle imageview-->
    <declare-styleable name="CPCircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>
</resources>